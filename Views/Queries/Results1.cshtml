@model IEnumerable<object>
@{
    ViewData["Title"] = "Результати запиту 1";
}

<h2>Результати запиту 1</h2>

@if (!Model.Any())
{
    <p>Немає даних для відображення.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Назва книги</th>
                <th>Видавництво</th>
                <th>Автор</th>
                <th>Кількість видач</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.GetType().GetProperty("TitleBook")?.GetValue(item)</td>
                    <td>@item.GetType().GetProperty("PublisherName")?.GetValue(item)</td>
                    <td>@item.GetType().GetProperty("AuthorName")?.GetValue(item)</td>
                    <td>@item.GetType().GetProperty("IssueCount")?.GetValue(item)</td>
                </tr>
            }
        </tbody>
    </table>
}

<a class="btn btn-primary mt-3" asp-action="Index" asp-controller="Queries">Назад</a>
