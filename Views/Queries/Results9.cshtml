@model IEnumerable<object>
@{
    ViewData["Title"] = "Результати запиту 9";
}

<h2>Результати запиту 9</h2>

@if (!Model.Any())
{
    <div class="alert alert-info" role="alert">
        Немає читачів, які взяли лише книги цього автора.
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Читач</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.GetType().GetProperty("FullNameReader")?.GetValue(item)</td>
                </tr>
            }
        </tbody>
    </table>
}

<a class="btn btn-primary mt-3" asp-action="Index" asp-controller="Queries">Назад</a>