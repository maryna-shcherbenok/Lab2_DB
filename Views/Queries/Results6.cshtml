@model object
@{
    ViewData["Title"] = "Результати запиту 6";
}

<h2>Результати запиту 6</h2>

@if (ViewBag.PageSum != null && ViewBag.ReaderName != null)
{
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Читач: @ViewBag.ReaderName</h4>
            <p class="card-text">
                <strong>Сума сторінок книг, які НЕ замовлялися цим читачем:</strong> @ViewBag.PageSum
            </p>
        </div>
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        Немає результатів.
    </div>
}

<a class="btn btn-primary mt-3" asp-action="Index" asp-controller="Queries">Назад</a>