@model IEnumerable<Lab2_DB.Models.PublishingHouse>

@{
    ViewData["Title"] = "Список видавництв";
}

<h1>Список видавництв</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Закрити"></button>
    </div>
}

<p>
    <a asp-action="Create">Додати нове</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TitlePh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumberPh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressPh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailPh)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TitlePh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumberPh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddressPh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailPh)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Деталі</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
