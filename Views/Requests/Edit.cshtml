@model Lab2_DB.Models.Request

@{
    ViewData["Title"] = "Редагування";
}

<h1>Редагування</h1>

<h4>Замовлення</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PassNumberLibrarian" class="control-label"></label>
                <select asp-for="PassNumberLibrarian" class="form-control" asp-items="ViewBag.PassNumberLibrarian"></select>
                <span asp-validation-for="PassNumberLibrarian" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardNumberReader" class="control-label"></label>
                <select asp-for="CardNumberReader" class="form-control" asp-items="ViewBag.CardNumberReader"></select>
                <span asp-validation-for="CardNumberReader" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreationDateRequest" class="control-label"></label>
                <input asp-for="CreationDateRequest" class="form-control" />
                <span asp-validation-for="CreationDateRequest" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequestType" class="control-label"></label>
                <input asp-for="RequestType" class="form-control" />
                <span asp-validation-for="RequestType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequestStatus" class="control-label"></label>
                <input asp-for="RequestStatus" class="form-control" />
                <span asp-validation-for="RequestStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Isbn" class="control-label"></label>
                <input asp-for="Isbn" class="form-control" />
                <span asp-validation-for="Isbn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутись до списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
