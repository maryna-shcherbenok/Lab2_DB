@model IEnumerable<Lab2_DB.Models.Department>

@{
    ViewData["Title"] = "Список відділів";
}

<h1>Список відділів</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Закрити"></button>
    </div>
}

<p>
    <a asp-action="Create">Додати новий</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TitleDepartment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeaderDepartment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LibraryNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TitleDepartment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LeaderDepartment)
                </td>
                <td>
                    @item.LibraryNavigation?.TitleLibrary
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Деталі</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
