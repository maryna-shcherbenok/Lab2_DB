@model Lab2_DB.Models.Department

@{
    ViewData["Title"] = "Видалити";
}

<h1>Видалити</h1>

<h3>Ви впевнені, що хочете видалити цей запис?</h3>
<div>
    <h4>Відділ</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TitleDepartment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TitleDepartment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LeaderDepartment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LeaderDepartment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LibraryNavigation)
        </dt>
        <dd class="col-sm-10">
            @Model.LibraryNavigation?.TitleLibrary
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Повернутися до списку</a>
    </form>
</div>
