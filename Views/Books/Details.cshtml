        <dd class="col-sm-10">
            @Model.AuthorBookNavigation?.FullNameAuthor
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FundBookNavigation)
        </dt>
        <dd class="col-sm-10">
            @Model.FundBookNavigation?.TitleFund
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PublisherBookNavigation)
        </dt>
        <dd class="col-sm-10">
