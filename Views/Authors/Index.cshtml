@model IEnumerable<Lab2_DB.Models.Author>

@{
    ViewData["Title"] = "Список авторів";
}

<h1>Список авторів</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<p>
    <a asp-action="Create">Додати нового</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullNameAuthor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumberAuthor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailAuthor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullNameAuthor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumberAuthor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailAuthor)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Деталі</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
