@model Lab2_DB.Models.Fund

@{
    ViewData["Title"] = "Редагувати";
}

<h1>Редагувати</h1>

<h4>Фонд</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TitleFund" class="control-label"></label>
                <input asp-for="TitleFund" class="form-control" />
                <span asp-validation-for="TitleFund" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeFund" class="control-label"></label>
                <input asp-for="TypeFund" class="form-control" />
                <span asp-validation-for="TypeFund" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalNumberCopies" class="control-label"></label>
                <input asp-for="TotalNumberCopies" class="form-control" />
                <span asp-validation-for="TotalNumberCopies" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentFund" class="control-label"></label>
                <select asp-for="DepartmentFund" class="form-control" asp-items="ViewBag.DepartmentFund"></select>
                <span asp-validation-for="DepartmentFund" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутися до списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
